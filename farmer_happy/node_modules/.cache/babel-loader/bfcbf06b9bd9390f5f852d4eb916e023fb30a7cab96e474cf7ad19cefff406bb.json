{"ast":null,"code":"import { ref, computed, onMounted, watch } from 'vue';\nimport { useRouter } from 'vue-router';\nimport { communityService } from '../api/community';\nimport logger from '../utils/logger';\nexport default {\n  name: 'Community',\n  setup() {\n    const router = useRouter();\n    const loading = ref(false);\n    const contentList = ref([]);\n    const currentType = ref('all');\n    const currentSort = ref('newest');\n    const searchKeyword = ref('');\n    const showImagePreview = ref(false);\n    const currentImage = ref('');\n    const imageList = ref([]);\n    const contentTypes = [{\n      value: 'all',\n      label: 'ÂÖ®ÈÉ®'\n    }, {\n      value: 'articles',\n      label: 'ÊñáÁ´†'\n    }, {\n      value: 'questions',\n      label: 'ÊèêÈóÆ'\n    }, {\n      value: 'experiences',\n      label: 'ÁªèÈ™åÂàÜ‰∫´'\n    }];\n    const sortOptions = [{\n      value: 'newest',\n      label: 'ÊúÄÊñ∞'\n    }, {\n      value: 'hottest',\n      label: 'ÊúÄÁÉ≠'\n    }, {\n      value: 'commented',\n      label: 'ÊúÄÂ§öËØÑËÆ∫'\n    }];\n\n    // Ëé∑ÂèñÁî®Êà∑‰ø°ÊÅØ\n    const getUserInfo = () => {\n      try {\n        const storedUser = localStorage.getItem('user');\n        return storedUser ? JSON.parse(storedUser) : null;\n      } catch (error) {\n        logger.error('COMMUNITY', 'Ëé∑ÂèñÁî®Êà∑‰ø°ÊÅØÂ§±Ë¥•', {}, error);\n        return null;\n      }\n    };\n\n    // Âä†ËΩΩÂÜÖÂÆπÂàóË°®\n    const loadContentList = async () => {\n      loading.value = true;\n      try {\n        const params = {};\n        if (currentType.value !== 'all') {\n          params.content_type = currentType.value;\n        }\n        if (searchKeyword.value) {\n          params.keyword = searchKeyword.value;\n        }\n        if (currentSort.value) {\n          params.sort = currentSort.value;\n        }\n        logger.info('COMMUNITY', 'Âä†ËΩΩÂÜÖÂÆπÂàóË°®', params);\n        const data = await communityService.getContentList(params);\n        contentList.value = data.list || [];\n        logger.info('COMMUNITY', 'ÂÜÖÂÆπÂàóË°®Âä†ËΩΩÊàêÂäü', {\n          count: contentList.value.length\n        });\n      } catch (error) {\n        logger.error('COMMUNITY', 'Âä†ËΩΩÂÜÖÂÆπÂàóË°®Â§±Ë¥•', {}, error);\n        alert(error.message || 'Âä†ËΩΩÂÜÖÂÆπÂ§±Ë¥•ÔºåËØ∑Á®çÂêéÈáçËØï');\n      } finally {\n        loading.value = false;\n      }\n    };\n\n    // Á±ªÂûãÂàáÊç¢\n    const handleTypeChange = type => {\n      if (currentType.value !== type) {\n        currentType.value = type;\n        logger.userAction('TYPE_CHANGE', {\n          type\n        });\n        loadContentList();\n      }\n    };\n\n    // ÊéíÂ∫èÂàáÊç¢\n    const handleSortChange = sort => {\n      if (currentSort.value !== sort) {\n        currentSort.value = sort;\n        logger.userAction('SORT_CHANGE', {\n          sort\n        });\n        loadContentList();\n      }\n    };\n\n    // ÊêúÁ¥¢Â§ÑÁêÜ\n    const handleSearch = () => {\n      logger.userAction('SEARCH', {\n        keyword: searchKeyword.value\n      });\n      loadContentList();\n    };\n\n    // ÁÇπÂáªÂÜÖÂÆπÂç°Áâá\n    const handleContentClick = contentId => {\n      logger.userAction('CONTENT_CLICK', {\n        contentId\n      });\n      router.push(`/community/${contentId}`);\n    };\n\n    // ÂèëÂ∏ÉÂÜÖÂÆπ\n    const handlePublishClick = () => {\n      const userInfo = getUserInfo();\n      if (!userInfo) {\n        router.push('/login');\n        return;\n      }\n      logger.userAction('PUBLISH_CLICK');\n      router.push('/community/publish');\n    };\n\n    // ËøîÂõû\n    const goBack = () => {\n      router.push('/home');\n    };\n\n    // Ê†ºÂºèÂåñÊó∂Èó¥\n    const formatTime = timeStr => {\n      if (!timeStr) return '';\n      try {\n        const date = new Date(timeStr);\n        const now = new Date();\n        const diff = now - date;\n        const minutes = Math.floor(diff / 60000);\n        const hours = Math.floor(diff / 3600000);\n        const days = Math.floor(diff / 86400000);\n        if (minutes < 1) return 'ÂàöÂàö';\n        if (minutes < 60) return `${minutes}ÂàÜÈíüÂâç`;\n        if (hours < 24) return `${hours}Â∞èÊó∂Ââç`;\n        if (days < 7) return `${days}Â§©Ââç`;\n        return date.toLocaleDateString('zh-CN');\n      } catch (error) {\n        return timeStr;\n      }\n    };\n\n    // Ëé∑ÂèñÁ±ªÂûãÊ†áÁ≠æ\n    const getTypeLabel = type => {\n      const typeMap = {\n        articles: 'ÊñáÁ´†',\n        questions: 'ÊèêÈóÆ',\n        experiences: 'ÁªèÈ™åÂàÜ‰∫´'\n      };\n      return typeMap[type] || type;\n    };\n\n    // Ëé∑ÂèñÁ±ªÂûãÊ†∑ÂºèÁ±ª\n    const getTypeClass = type => {\n      return `type-${type}`;\n    };\n\n    // Ëé∑ÂèñËßíËâ≤Ê†áÁ≠æ\n    const getRoleLabel = role => {\n      const roleMap = {\n        farmer: 'ÂÜúÊà∑',\n        expert: '‰∏ìÂÆ∂',\n        buyer: '‰π∞ÂÆ∂',\n        bank: 'Èì∂Ë°å'\n      };\n      return roleMap[role] || role;\n    };\n\n    // Ëé∑ÂèñËßíËâ≤Ê†∑ÂºèÁ±ª\n    const getRoleClass = role => {\n      return `role-${role}`;\n    };\n\n    // È¢ÑËßàÂõæÁâá\n    const previewImage = (image, images) => {\n      currentImage.value = image;\n      imageList.value = images || [];\n      showImagePreview.value = true;\n    };\n\n    // ÂÖ≥Èó≠ÂõæÁâáÈ¢ÑËßà\n    const closeImagePreview = () => {\n      showImagePreview.value = false;\n      currentImage.value = '';\n      imageList.value = [];\n    };\n    onMounted(() => {\n      logger.lifecycle('Community', 'mounted');\n      loadContentList();\n    });\n    return {\n      loading,\n      contentList,\n      currentType,\n      currentSort,\n      searchKeyword,\n      contentTypes,\n      sortOptions,\n      showImagePreview,\n      currentImage,\n      handleTypeChange,\n      handleSortChange,\n      handleSearch,\n      handleContentClick,\n      handlePublishClick,\n      goBack,\n      formatTime,\n      getTypeLabel,\n      getTypeClass,\n      getRoleLabel,\n      getRoleClass,\n      previewImage,\n      closeImagePreview\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","onMounted","watch","useRouter","communityService","logger","name","setup","router","loading","contentList","currentType","currentSort","searchKeyword","showImagePreview","currentImage","imageList","contentTypes","value","label","sortOptions","getUserInfo","storedUser","localStorage","getItem","JSON","parse","error","loadContentList","params","content_type","keyword","sort","info","data","getContentList","list","count","length","alert","message","handleTypeChange","type","userAction","handleSortChange","handleSearch","handleContentClick","contentId","push","handlePublishClick","userInfo","goBack","formatTime","timeStr","date","Date","now","diff","minutes","Math","floor","hours","days","toLocaleDateString","getTypeLabel","typeMap","articles","questions","experiences","getTypeClass","getRoleLabel","role","roleMap","farmer","expert","buyer","bank","getRoleClass","previewImage","image","images","closeImagePreview","lifecycle"],"sources":["D:\\STUDY\\FarmerHappy\\farmer_happy\\src\\community\\Community.vue"],"sourcesContent":["<template>\r\n  <div class=\"community-container\">\r\n    <!-- È°∂ÈÉ®ÂØºËà™Ê†è -->\r\n    <header class=\"header\">\r\n      <div class=\"header-left\">\r\n        <button class=\"btn-back\" @click=\"goBack\">\r\n          <span class=\"back-icon\">‚Üê</span>\r\n          ËøîÂõû\r\n        </button>\r\n        <h1 class=\"header-title\">‰∏ìÂÆ∂ÂÜúÊà∑‰∫§ÊµÅÂπ≥Âè∞</h1>\r\n      </div>\r\n      <button class=\"btn-publish\" @click=\"handlePublishClick\">\r\n        <span class=\"publish-icon\">‚úé</span>\r\n        ÂèëÂ∏ÉÂÜÖÂÆπ\r\n      </button>\r\n    </header>\r\n\r\n    <!-- ‰∏ªÂÜÖÂÆπÂå∫Âüü -->\r\n    <main class=\"main-content\">\r\n      <!-- Á≠õÈÄâÂíåÊêúÁ¥¢Âå∫Âüü -->\r\n      <div class=\"filter-section\">\r\n        <div class=\"filter-tabs\">\r\n          <button\r\n            v-for=\"type in contentTypes\"\r\n            :key=\"type.value\"\r\n            class=\"filter-tab\"\r\n            :class=\"{ active: currentType === type.value }\"\r\n            @click=\"handleTypeChange(type.value)\"\r\n          >\r\n            {{ type.label }}\r\n          </button>\r\n        </div>\r\n        <div class=\"search-box\">\r\n          <input\r\n            v-model=\"searchKeyword\"\r\n            type=\"text\"\r\n            placeholder=\"ÊêúÁ¥¢ÂÜÖÂÆπ...\"\r\n            class=\"search-input\"\r\n            @input=\"handleSearch\"\r\n          />\r\n          <span class=\"search-icon\">üîç</span>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- ÊéíÂ∫èÈÄâÈ°π -->\r\n      <div class=\"sort-section\">\r\n        <span class=\"sort-label\">ÊéíÂ∫èÔºö</span>\r\n        <button\r\n          v-for=\"sort in sortOptions\"\r\n          :key=\"sort.value\"\r\n          class=\"sort-btn\"\r\n          :class=\"{ active: currentSort === sort.value }\"\r\n          @click=\"handleSortChange(sort.value)\"\r\n        >\r\n          {{ sort.label }}\r\n        </button>\r\n      </div>\r\n\r\n      <!-- ÂÜÖÂÆπÂàóË°® -->\r\n      <div class=\"content-list\" v-if=\"!loading && contentList.length > 0\">\r\n        <div\r\n          v-for=\"item in contentList\"\r\n          :key=\"item.contentId\"\r\n          class=\"content-card\"\r\n          @click=\"handleContentClick(item.contentId)\"\r\n        >\r\n          <div class=\"content-header\">\r\n            <div class=\"content-type-badge\" :class=\"getTypeClass(item.contentType)\">\r\n              {{ getTypeLabel(item.contentType) }}\r\n            </div>\r\n            <div class=\"content-meta\">\r\n              <span class=\"author\">\r\n                <span class=\"author-icon\">üë§</span>\r\n                {{ item.authorName }}\r\n              </span>\r\n              <span class=\"time\">{{ formatTime(item.createdAt) }}</span>\r\n            </div>\r\n          </div>\r\n          \r\n          <h3 class=\"content-title\">{{ item.title }}</h3>\r\n          \r\n          <p class=\"content-summary\">{{ item.content }}</p>\r\n          \r\n          <div v-if=\"item.images && item.images.length > 0\" class=\"content-images\">\r\n            <img\r\n              v-for=\"(image, idx) in item.images.slice(0, 3)\"\r\n              :key=\"idx\"\r\n              :src=\"image\"\r\n              :alt=\"`ÂõæÁâá${idx + 1}`\"\r\n              class=\"content-image\"\r\n              @click.stop=\"previewImage(image, item.images)\"\r\n            />\r\n            <span v-if=\"item.images.length > 3\" class=\"image-count\">+{{ item.images.length - 3 }}</span>\r\n          </div>\r\n          \r\n          <div class=\"content-footer\">\r\n            <div class=\"content-stats\">\r\n              <span class=\"stat-item\">\r\n                <span class=\"stat-icon\">üëÅ</span>\r\n                {{ item.viewCount || 0 }}\r\n              </span>\r\n              <span class=\"stat-item\">\r\n                <span class=\"stat-icon\">üí¨</span>\r\n                {{ item.commentCount || 0 }}\r\n              </span>\r\n            </div>\r\n            <div class=\"content-role\">\r\n              <span class=\"role-badge\" :class=\"getRoleClass(item.authorRole)\">\r\n                {{ getRoleLabel(item.authorRole) }}\r\n              </span>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- Á©∫Áä∂ÊÄÅ -->\r\n      <div v-if=\"!loading && contentList.length === 0\" class=\"empty-state\">\r\n        <div class=\"empty-icon\">üìù</div>\r\n        <p class=\"empty-text\">ÊöÇÊó†ÂÜÖÂÆπÔºåÂø´Êù•ÂèëÂ∏ÉÁ¨¨‰∏Ä‰∏™Â∏ñÂ≠êÂêßÔºÅ</p>\r\n      </div>\r\n\r\n      <!-- Âä†ËΩΩÁä∂ÊÄÅ -->\r\n      <div v-if=\"loading\" class=\"loading-state\">\r\n        <div class=\"loading-spinner\"></div>\r\n        <p>Âä†ËΩΩ‰∏≠...</p>\r\n      </div>\r\n    </main>\r\n\r\n    <!-- ÂõæÁâáÈ¢ÑËßàÊ®°ÊÄÅÊ°Ü -->\r\n    <div v-if=\"showImagePreview\" class=\"image-preview-modal\" @click=\"closeImagePreview\">\r\n      <img :src=\"currentImage\" :alt=\"'È¢ÑËßàÂõæÁâá'\" class=\"preview-image\" @click.stop />\r\n      <button class=\"close-preview\" @click=\"closeImagePreview\">√ó</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { ref, computed, onMounted, watch } from 'vue';\r\nimport { useRouter } from 'vue-router';\r\nimport { communityService } from '../api/community';\r\nimport logger from '../utils/logger';\r\n\r\nexport default {\r\n  name: 'Community',\r\n  setup() {\r\n    const router = useRouter();\r\n    const loading = ref(false);\r\n    const contentList = ref([]);\r\n    const currentType = ref('all');\r\n    const currentSort = ref('newest');\r\n    const searchKeyword = ref('');\r\n    const showImagePreview = ref(false);\r\n    const currentImage = ref('');\r\n    const imageList = ref([]);\r\n\r\n    const contentTypes = [\r\n      { value: 'all', label: 'ÂÖ®ÈÉ®' },\r\n      { value: 'articles', label: 'ÊñáÁ´†' },\r\n      { value: 'questions', label: 'ÊèêÈóÆ' },\r\n      { value: 'experiences', label: 'ÁªèÈ™åÂàÜ‰∫´' }\r\n    ];\r\n\r\n    const sortOptions = [\r\n      { value: 'newest', label: 'ÊúÄÊñ∞' },\r\n      { value: 'hottest', label: 'ÊúÄÁÉ≠' },\r\n      { value: 'commented', label: 'ÊúÄÂ§öËØÑËÆ∫' }\r\n    ];\r\n\r\n    // Ëé∑ÂèñÁî®Êà∑‰ø°ÊÅØ\r\n    const getUserInfo = () => {\r\n      try {\r\n        const storedUser = localStorage.getItem('user');\r\n        return storedUser ? JSON.parse(storedUser) : null;\r\n      } catch (error) {\r\n        logger.error('COMMUNITY', 'Ëé∑ÂèñÁî®Êà∑‰ø°ÊÅØÂ§±Ë¥•', {}, error);\r\n        return null;\r\n      }\r\n    };\r\n\r\n    // Âä†ËΩΩÂÜÖÂÆπÂàóË°®\r\n    const loadContentList = async () => {\r\n      loading.value = true;\r\n      try {\r\n        const params = {};\r\n        if (currentType.value !== 'all') {\r\n          params.content_type = currentType.value;\r\n        }\r\n        if (searchKeyword.value) {\r\n          params.keyword = searchKeyword.value;\r\n        }\r\n        if (currentSort.value) {\r\n          params.sort = currentSort.value;\r\n        }\r\n\r\n        logger.info('COMMUNITY', 'Âä†ËΩΩÂÜÖÂÆπÂàóË°®', params);\r\n        const data = await communityService.getContentList(params);\r\n        contentList.value = data.list || [];\r\n        logger.info('COMMUNITY', 'ÂÜÖÂÆπÂàóË°®Âä†ËΩΩÊàêÂäü', { count: contentList.value.length });\r\n      } catch (error) {\r\n        logger.error('COMMUNITY', 'Âä†ËΩΩÂÜÖÂÆπÂàóË°®Â§±Ë¥•', {}, error);\r\n        alert(error.message || 'Âä†ËΩΩÂÜÖÂÆπÂ§±Ë¥•ÔºåËØ∑Á®çÂêéÈáçËØï');\r\n      } finally {\r\n        loading.value = false;\r\n      }\r\n    };\r\n\r\n    // Á±ªÂûãÂàáÊç¢\r\n    const handleTypeChange = (type) => {\r\n      if (currentType.value !== type) {\r\n        currentType.value = type;\r\n        logger.userAction('TYPE_CHANGE', { type });\r\n        loadContentList();\r\n      }\r\n    };\r\n\r\n    // ÊéíÂ∫èÂàáÊç¢\r\n    const handleSortChange = (sort) => {\r\n      if (currentSort.value !== sort) {\r\n        currentSort.value = sort;\r\n        logger.userAction('SORT_CHANGE', { sort });\r\n        loadContentList();\r\n      }\r\n    };\r\n\r\n    // ÊêúÁ¥¢Â§ÑÁêÜ\r\n    const handleSearch = () => {\r\n      logger.userAction('SEARCH', { keyword: searchKeyword.value });\r\n      loadContentList();\r\n    };\r\n\r\n    // ÁÇπÂáªÂÜÖÂÆπÂç°Áâá\r\n    const handleContentClick = (contentId) => {\r\n      logger.userAction('CONTENT_CLICK', { contentId });\r\n      router.push(`/community/${contentId}`);\r\n    };\r\n\r\n    // ÂèëÂ∏ÉÂÜÖÂÆπ\r\n    const handlePublishClick = () => {\r\n      const userInfo = getUserInfo();\r\n      if (!userInfo) {\r\n        router.push('/login');\r\n        return;\r\n      }\r\n      logger.userAction('PUBLISH_CLICK');\r\n      router.push('/community/publish');\r\n    };\r\n\r\n    // ËøîÂõû\r\n    const goBack = () => {\r\n      router.push('/home');\r\n    };\r\n\r\n    // Ê†ºÂºèÂåñÊó∂Èó¥\r\n    const formatTime = (timeStr) => {\r\n      if (!timeStr) return '';\r\n      try {\r\n        const date = new Date(t